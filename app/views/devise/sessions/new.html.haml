.new-session
  %h2.center-align Log in
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .row
      .col.s12
        .input-field
          %i.material-icons.prefix email
          = f.label :email
          = f.email_field :email, autofocus: true
    .row
      .col.s12
        .input-field
          %i.material-icons.prefix vpn_key
          = f.label :password
          = f.password_field :password, autocomplete: "off"
    - if devise_mapping.rememberable?
      -# .input-field
      .row
        .col.s12
          .switch
            -# %i.material-icons.prefix
            = f.label :remember_me do
              Remember me
              .switch-remember.right
                Off
                = f.check_box :remember_me
                %span.lever
                On
    %br/
    .actions.login
      = f.button class: 'btn waves-effect waves-light loginbutton' do
        Log in
        %i.material-icons.right send
      %p.signup-via
        %strong or signup via
      .fblogin
        = link_to user_facebook_omniauth_authorize_path do
          = image_tag 'fb.png', alt: 'facebook login', class: 'fbicon'
      %br/
      %br/
  .sessionlinks
    = render "devise/shared/links"
